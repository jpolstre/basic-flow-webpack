@import 'colores.styl'
	
// body
// 	background-color color2
// 	color color1
body
	margin 0
	padding 0
	font-family "Operator Mono"

/*Logo & Menu*/	
#baner-menu
	position fixed
	padding 0
	margin 0
	width 100%
	background-color color2
	color color1
	text-transform uppercase
	h1
		margin 0
		background-color #000
		width 25%
		padding 5px
		
		float left
	ul
		list-style-type none
		margin 0
		padding 0
		overflow hidden
		li
			float right  
			a
				display block
				color #fff
				text-align center
				padding 16px
				text-decoration none
			a:hover
				background-color #111	
			

#container
	padding 50px 10px 0 10px	
	
	h1:first-child
		text-align center
	h2
		text-decoration underline
	
	article
		color #FFF
		font-weight 300
		padding 10px
		
	/*Aplicando CSS GRID al padre de los elementos.*/
	#header
		display grid//padre o contenedor  tpo grid.
		grid-template-columns 2fr 1fr 1fr//3 columnas(primera de 2fr segunda y tercera de 1fr)
		grid-template-rows 10em 10em//2 filas cada una de 10em
		grid-gap 1em//no se que es ?
		width 100%
		/*el primer elemento del primer bloque debe ocupar las 2 columnas*/
		article:first-child
			grid-row-start 1//empieza en la columna 1
			grid-row-end 3//termina en la columna 3(al empezar la 3ra fila).
			
			
	#news
		display grid
		grid-template-columns repeat(3, 1fr)
		grid-template-rows 10em// 1 fila de 10em
		grid-gap 1em
		



/*Articles colors*/
#a1, a6
	background-color c3
	
#a2,a5
	background-color c2
	
#a3
	background-color c5
	
#a4, #a6
	background-color c1

#a5
	background-color c4	
	
/*footer*/
footer
	
	display grid
	grid-template-columns repeat(2, 1fr)
	grid-template-rows 10em
	
	padding 30px 5px
	margin-top 20px
	background-color #000
	
	ul
		
		// background-color #777
		li
			list-style none
			padding 5px
			a
				color #fff
				text-decoration none
				text-transform uppercase
					

